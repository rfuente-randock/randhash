{% extends 'base.html.twig' %}

{% block body %}
    <h1>User edit</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input class="btn btn-default pull-right" type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul class="buttons pull-right">
        <li>
            <a class="btn btn-default" href="{{ path('hashtest_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form, {'attr': {'onclick': 'return confirm("Are you sure?")'}}) }}
                <input class="btn btn-danger" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
